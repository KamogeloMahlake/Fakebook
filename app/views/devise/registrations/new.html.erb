
<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 ">
        <div class="log-in panel col-md-4" >
          <div class="panel-heading">
            <h2>Create Your Account</h2>
          </div>


          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :user_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "text", class: "input-lg"}%>

              <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" , class: "input-lg"}%>

              <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" , class: "input-lg"} %>
              <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "input-lg" } %>

            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up" , class: "btn-lg btn-info btn-block"%>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div style="text-align: center; margin-top: 1rem;">
    <%= link_to "Login", new_user_session_path, style: "text-align: center" %>
  </div>
  <div class="container text-center">
  <h3>Or sign up with:</h3>
  <div class="d-flex justify-content-center gap-3">
    <%= button_to(user_google_oauth2_omniauth_authorize_path) do %>
      <i class="bi bi-google" style="font-size: 2rem; color: #DB4437;"></i> 
    <% end%>
    <%= button_to(user_github_omniauth_authorize_path) do %>
      <i class="bi bi-github" style="font-size: 2rem; color: #000000;"></i> 
    <% end%>
  </div>
</div>
</div>


